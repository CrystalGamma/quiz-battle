<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

RewriteRule ^players/(\d+)/games$ scripts/games.php?pid=$1 [QSA]
RewriteRule ^games/(\d+)/(\d+)$ scripts/games.php?id=$1&qid=$2
RewriteRule ^(categories|games|players|questions)/(\d+)$ scripts/$1.php?id=$2
RewriteRule ^(categories|games|players|questions)/$ scripts/$1.php [QSA]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^scripts/(.*)$ /static/$1.js [QSA]
RewriteRule ^styles/?$ static/style.css [QSA]
RewriteRule ^styles/(.*)$ static/$1.css [QSA]
RewriteRule ^auth$ authorization.php
</IfModule>
